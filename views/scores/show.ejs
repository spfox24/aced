<%- include('../partials/header') %>

<main>
    <section>
        <label>Course: </label>
            <div><%= scores.course %></div>
        <label>Date: </label>
            <div><%= scores.date.toLocaleDateString() %></div>
        <label>Score: </label>
            <div><%= scores.score %></div>
        <a href="/scores/<%= scores._id %>/edit">
            <input type="button" value="Edit Score">
        </a>
    </section>
    <h3>Course Condition</h3>
    <form action="/scores/<%= scores._id %>/conditions">
        <label>Review:</label>
        <textarea name="content"></textarea>
        <label>Rating:</label>
        <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <input type="submit" value="Add Condition">
    </form>

</main>

<%- include('../partials/footer') %>