<%- include('../partials/header') %>

<main>
    <section>
        <div>Course: </div>
            <div><%= scores.course %></div>
        <div>Date: </div>
            <div><%= scores.date %></div>
        <div>Score: </div>
            <div><%= scores.score %></div>
        <input type="button" value="Edit Score">
    </section>
    <h2>Course Condition</h2>
    <form action="/scores/<%= scores._id %>/conditions">
        <label>Review:</label>
        <textarea name="content"></textarea>
        <label>Rating:</label>
        <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <input type="submit" value="Add Condition">
    </form>

</main>

<%- include('../partials/footer') %>